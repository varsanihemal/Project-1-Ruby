<h1 class="page-title mb-4">Exchanges</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% @exchanges.each do |exchange| %>
        <tr>
          <td><%= link_to exchange.name, exchange_path(exchange), class: "text-decoration-none" %></td>
          <td><%= link_to 'View Details', exchange_path(exchange), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
