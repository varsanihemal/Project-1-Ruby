<style>
  .bg-image {
    background-image: url('/assets/images/background.jpg');
    background-size: cover;
    background-position: center;
    height: 100vh;
  }
</style>

<div class="bg-image">
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="text-center">
          <h1>Welcome to Coin Rankings!</h1>
          <p class="lead">Your source for real-time and historical data on cryptocurrencies.</p>
        </div>
        <div class="text-center mt-4">
          <%= link_to 'Explore Cryptocurrencies', cryptocurrencies_path, class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    </div>
  </div>

  <!-- Map container -->
  <div class="mt-4" id="map" style="height: 100%;"></div>
</div>

<!-- Map API Script -->
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD1_PupQQUF8TtY0-9emfMO_jKtW8d0FcM&libraries=places"></script>

<script>
  let map;

  function initMap() {
    const myLatLng = { lat: 49.8951, lng: -97.1384 };

    map = new google.maps.Map(document.getElementById('map'), {
      center: myLatLng,
      zoom: 8 
    });

    const marker = new google.maps.Marker({
      position: myLatLng,
      map: map,
      title: 'Coin Rankings Headquarters'
    });
  }

  window.addEventListener('load', initMap);
</script>
