<div class="container mt-4">
  <h1><%= @cryptocurrency.name %></h1>

  <div class="row mt-4">
    <div class="col-md-6">
      <p><strong>Symbol:</strong> <%= @cryptocurrency.symbol %></p>
      <p><strong>Market Cap:</strong> <%= number_to_currency(@cryptocurrency.market_cap) %></p>
      <p><strong>Price:</strong> <%= number_to_currency(@cryptocurrency.price) %></p>
      <p><strong>Volume (24h):</strong> <%= number_to_currency(@cryptocurrency.volume_24h) %></p>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-6">
      <h2>Exchanges</h2>
      <ul class="list-group">
        <% @exchanges.each do |exchange| %>
          <li class="list-group-item">
            <%= link_to exchange.name, exchange_path(exchange), class: "text-decoration-none" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
